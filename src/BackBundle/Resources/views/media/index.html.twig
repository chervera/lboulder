{% extends 'base.html.twig' %}

{% block body %}
	<nav aria-label="breadcrumb" role="navigation">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="{{path('zona_index')}}">Zonas</a></li>
			<li class="breadcrumb-item"><a href="{{path('sector_index', {"zona_id": via.boulder.sector.zona.id})}}">{{via.boulder.sector.zona.name}}</a></li>
			<li class="breadcrumb-item"><a href="{{path('boulder_index', {"zona_id": via.boulder.sector.zona.id, "sector_id": via.boulder.sector.id})}}">{{via.boulder.sector.name}}</a></li>			
			<li class="breadcrumb-item"><a href="{{path('via_index', {"zona_id": via.boulder.sector.zona.id, "sector_id": via.boulder.sector.id, "boulder_id": via.boulder.id})}}">{{via.boulder.sector.name}}</a></li>						
			<li class="breadcrumb-item active" aria-current="page">{{via.realName}}</li>			
		</ol>
	</nav>

    <h1>Media list</h1>

    <table>
        <thead>
            <tr>
                <th>Alt</th>
                <th>Image</th>
                <th>Embed</th>
                <th>Type</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for media in medias %}
            <tr>
                <td><a href="{{ path('media_show', { 'id': media.id , "zona_id": media.via.boulder.sector.zona.id, "sector_id": media.via.boulder.sector.id, "boulder_id": media.via.boulder.id, "via_id": media.via.id}) }}">{{ media.alt }}</a></td>
                <td>{{ media.image }}</td>
                <td>{{ media.embed }}</td>
                <td>{{ media.type }}</td>
                <td>{{ media.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('media_show', { 'id': media.id, "zona_id": media.via.boulder.sector.zona.id, "sector_id": media.via.boulder.sector.id, "boulder_id": media.via.boulder.id, "via_id": media.via.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('media_edit', { 'id': media.id, "zona_id": media.via.boulder.sector.zona.id, "sector_id": media.via.boulder.sector.id, "boulder_id": media.via.boulder.id, "via_id": media.via.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('media_new', { "zona_id": zona_id, "sector_id": sector_id, "boulder_id": boulder_id, "via_id": via_id}) }}">Create a new media</a>
        </li>
    </ul>
{% endblock %}
